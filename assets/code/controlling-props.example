import React from 'react';
import { gql, graphql } from 'react-apollo';

const FeedQuery = gql`query allPosts {
  allPosts(orderBy: $orderBy) {
    id
    imageUrl
    description
  }
}`;

class ListPage extends Component {
  props: Props;
  componentWillReceiveProps(nextProps) {
    if (this.props.location.key !== nextProps.location.key) {
      this.props.userPosts.refetch();
    }
  }

  render() {
    if (this.props.userPosts.loading) {
      return (
        <div className="flex w-100 h-100 items-center justify-center pt7">
          <div>
            Loading
          </div>
        </div>
      );
    }

    let blurClass = '';

    if (this.props.location.pathname !== '/') {
      blurClass = ' blur';
    }

    return (
      <div className={`w-100 flex justify-center pa6${blurClass}`}>
        <div className="w-100 flex flex-wrap" style={{ maxWidth: 1150 }}>
          <Link
            to="/create"
            className="ma3 box new-post br2 flex flex-column items-center justify-center ttu fw6 f20 black-30 no-underline"
          >
            <img
              src={require('../assets/plus.svg')}
              alt=""
              className="plus mb3"
            />
            <div>New Post</div>
          </Link>
          {this.props.userPosts.allPosts.map(post =>
            <Post
              key={post.id}
              post={post}
              refresh={() => this.props.userPosts.refetch()}
            />,
          )}
        </div>
        {this.props.children}
      </div>
    );
  }
}

export default graphql(FeedQuery, {
  options: ownProps => ({
    variables: { orderBy: ownProps.orderBy },
    name: 'userPosts',
    fetchPolicy: 'network-only',
    pollInterval: 2000
  }),
  skip: ownProps => !ownProps.authenticated,
})(ListPage);
